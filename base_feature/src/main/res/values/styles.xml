<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/colorError</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimaryInverse</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorTertiary">@color/textColorTertiary</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:colorBackground">@color/colorWindowBackground</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationView</item>
        <item name="colorControlHighlight">@color/rippleColor</item>
        <item name="android:listDivider">@color/dividerColor</item>
        <item name="stubColor">@color/colorError</item>
    </style>

    <style name="BottomNavigationView" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="itemRippleColor">@color/rippleColor</item>
        <item name="itemTextAppearanceActive">@style/Text.Regular.12</item>
        <item name="itemTextAppearanceInactive">@style/Text.Regular.12</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="AppShimmer">
        <item name="shimmer_animation_duration">1200</item>
        <item name="shimmer_angle">0</item>
        <item name="shimmer_color">@color/white20</item>
    </style>

    <style name="AppCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorPrimary</item>
        <item name="cardCornerRadius">@dimen/base_card_corner_radius</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="NoTitleDialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

</resources>