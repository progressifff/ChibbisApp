<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.chibbis.f_more.MoreViewModel" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="enterAlways|scroll"
            app:title="@string/more_title_text"
            android:background="?attr/colorPrimary"
            app:titleTextAppearance="@style/Text.Regular.18.PrimaryColor" />

        <Button
            android:id="@+id/more_app_rate_dialog_btn"
            style="@style/Button.Accent.16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/app_rate_dialog_rate_btn_text" />

    </LinearLayout>

</layout>